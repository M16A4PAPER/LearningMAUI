<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewsDemo.Views.Presentation"
             Title="Presentation">
    <VerticalStackLayout Padding="5">
        <Frame Padding="8" BorderColor="DarkGray" CornerRadius="10" HasShadow="True">
            <VerticalStackLayout>
                <Label Margin="0,0,0,10" Text="Welcome to this."></Label>
                <BoxView HeightRequest="4"
                         HorizontalOptions="Fill"
                         Color="Gray">
                </BoxView>
                <Ellipse
                    Margin="0,14,0,10"
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    Stroke="Red"
                    StrokeThickness="4"
                    WidthRequest="150">
                    <Ellipse.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.1"></GradientStop>
                            <GradientStop Offset="1.0"></GradientStop>
                        </RadialGradientBrush>
                    </Ellipse.Background>
                </Ellipse>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>