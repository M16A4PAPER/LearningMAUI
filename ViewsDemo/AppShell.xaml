<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ViewsDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ViewsDemo"
    xmlns:views="clr-namespace:ViewsDemo.Views"
    Title="ViewsDemo"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Presentation" ContentTemplate="{DataTemplate views:Presentation}" />
        <ShellContent Title="Commands" ContentTemplate="{DataTemplate views:CommandPage}" />
        <ShellContent Title="Setter" ContentTemplate="{DataTemplate views:SettersPage}" />
        <ShellContent Title="Editor" ContentTemplate="{DataTemplate views:EditingPage}" />
        <ShellContent Title="Activity" ContentTemplate="{DataTemplate views:ActivityPage}" />
        <ShellContent Title="XAML" ContentTemplate="{DataTemplate views:XamlBindingPage}" />
        <ShellContent Title="C#" ContentTemplate="{DataTemplate views:CodeBindingPage}" />
    </TabBar>

</Shell>
